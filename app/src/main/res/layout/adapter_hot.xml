<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_20"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_hot"
        android:textSize="@dimen/dp_12"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hot_name"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="双宫茧桑蚕丝被 空调被"
        app:layout_constraintLeft_toRightOf="@id/image_hot"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goods_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:layout_margin="@dimen/dp_10"
        android:text="一级桑蚕丝，吸湿透气柔软"
        app:layout_constraintLeft_toRightOf="@id/image_hot"
        app:layout_constraintTop_toBottomOf="@id/hot_name" />

    <TextView
        android:id="@+id/tv_retail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:textColor="#ED1E0F"
        app:layout_constraintLeft_toRightOf="@id/image_hot"
        app:layout_constraintTop_toBottomOf="@id/goods_brief" />

</androidx.constraintlayout.widget.ConstraintLayout>